{
  "name": "ether-faucet",
  "version": "0.1.4",
  "description": "A Faucet contract & microservice for the Ethereum ecosystem",
  "author": "jovijovi <mageyul@hotmail.com>",
  "license": "MIT",
  "keywords": [
    "typescript",
    "microservice",
    "ethereum",
    "ether-faucet",
    "ether",
    "faucet"
  ],
  "scripts": {
    "compile": "yarn hardhat compile",
    "deploy": "hardhat run ./scripts/deploy.ts --network custom",
    "flatten": "hardhat flatten ${CONTRACT_SRC} > ${CONTRACT_DST}",
    "remixd": "remixd -s ./contracts --remix-ide https://remix.ethereum.org",
    "test": "hardhat test",
    "build": "yarn clean && yarn compile && tsc --build && cp -ap ./conf ./dist/ && rm -rf ./dist/test",
    "clean": "yarn hardhat clean && rm -rf ./dist",
    "dev-run": "ts-node ./src/main/index.ts",
    "dist-run": "node ./dist/src/main/index.js"
  },
  "dependencies": {
    "@jovijovi/ether-keystore": "^0.1.8",
    "@jovijovi/ether-network": "^0.1.3",
    "@jovijovi/pedrojs-common": "^1.1.0",
    "@jovijovi/pedrojs-network-http": "^1.1.0",
    "@openzeppelin/contracts": "4.6.0",
    "ethers": "^5.6.8",
    "fastq": "^1.13.0"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "2.0.6",
    "@nomiclabs/hardhat-etherscan": "3.0.4",
    "@nomiclabs/hardhat-waffle": "^2.0.3",
    "@tsconfig/node16": "^1.0.2",
    "@typechain/ethers-v5": "10.0.0",
    "@typechain/hardhat": "6.0.0",
    "@types/chai": "4.3.1",
    "@types/chai-as-promised": "7.1.5",
    "@types/mocha": "9.1.1",
    "@typescript-eslint/eslint-plugin": "^5.27.1",
    "@typescript-eslint/parser": "^5.27.1",
    "chai": "4.3.6",
    "chai-as-promised": "^7.1.1",
    "eslint": "^8.17.0",
    "hardhat": "2.9.7",
    "mocha": "^10.0.0",
    "ts-node": "10.8.1",
    "typechain": "8.0.0",
    "typescript": "4.7.3"
  }
}
